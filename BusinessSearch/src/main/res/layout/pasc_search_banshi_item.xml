<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_search_item"
    android:background="@drawable/search_item_selector"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/search_item_height"
        android:orientation="horizontal"
        android:paddingRight="@dimen/search_item_padding"
        android:paddingLeft="@dimen/search_item_padding">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="人才就业"
            android:textColor="@color/search_333333"
            android:textSize="@dimen/search_big_size" />

    </LinearLayout>

    <include
        layout="@layout/pasc_search_line_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_line_height"
        android:layout_marginLeft="@dimen/search_item_padding" />

</LinearLayout>