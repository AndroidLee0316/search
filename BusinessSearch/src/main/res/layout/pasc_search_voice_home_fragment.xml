<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.pasc.business.search.customview.SearchTagView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginRight="72dp"
        android:layout_alignParentRight="true"
        android:layout_height="56dp">
    <com.pasc.business.voice.ActionView
        android:id="@+id/iv_show_voice"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:src="@drawable/search_voice_robot" />
    </RelativeLayout>
    <com.pasc.business.voice.VoiceView
        android:id="@+id/voiceView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:layout_marginTop="56dp" />
    
</RelativeLayout>